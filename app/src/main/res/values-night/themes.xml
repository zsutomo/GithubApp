<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SubmissionAkhirAplikasiGitHubUser" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluegray700</item>
        <item name="colorPrimaryVariant">@color/bluegray900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="popupMenuBackground">@color/bluegray700</item>


        <item name="navigationIcon">@drawable/ic_github</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:textViewStyle">@style/DefaultTextView</item>


    </style>

    <style name="DefaultTextView" parent="Widget.AppCompat.TextView">

        <item name="fontFamily">@font/segoeui_semibold</item>
    </style>

    <style name="bg_color" parent="">
        <item name="android:background">@color/bluegray700</item>
    </style>

    <style name="tint_detail" parent="">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="tablayout" parent="">
        <item name="tabTextColor">@color/black</item>

        <item name="android:background">@color/white</item>
    </style>

    <style name="item_row" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_user" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>